@page "/to-do-list-kanban"
@using Syncfusion.Blazor.Kanban
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Buttons
@inject IStringLocalizer<Pages.ToDoListKanban> Localizer

<div class="container">
    <h3>@Localizer["ToDoListTitle"]</h3>

    <SfKanban DataSource="@ToDoData" KeyField="Status">
        <KanbanColumns>
            <KanbanColumn HeaderText="@Localizer["ToDo"]" KeyField="ToDo"></KanbanColumn>
        </KanbanColumns>
        <KanbanCardSettings HeaderField="Number" ContentField="ToDo" Template="@CardTemplate"></KanbanCardSettings>
    </SfKanban>

    <div class="row mt-3">
        <div class="col-md-12 text-right">
            <SfButton CssClass="e-primary">@Localizer["Close"]</SfButton>
        </div>
    </div>
</div>

@code {
    public class ToDo
    {
        public int Number { get; set; }
        public string ToDo { get; set; }
        public string Status { get; set; }
    }

    public List<ToDo> ToDoData = new List<ToDo>
    {
        new ToDo { Number = 1, ToDo = "L'avis de paiement en instance de paiement existe pour cette déclaration. Veuillez le régler.", Status = "ToDo" }
        // Add more data as needed
    };

    private RenderFragment<ToDo> CardTemplate = (context) => __builder =>
    {
        __builder.OpenElement(0, "div");
        __builder.AddContent(1, context.ToDo);
        __builder.CloseElement();
    };
}