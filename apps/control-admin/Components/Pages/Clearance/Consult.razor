@page "/clearance-details"
@using Syncfusion.Blazor.Grids
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Buttons
@inject IStringLocalizer<Pages.ClearanceDetails> Localizer

<div class="container">
    <h3>@Localizer["ClearanceDetailsTitle"]</h3>

    <h4>@Localizer["SuspensiveRegimeDetails"]</h4>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["DeclarationNo"]" CssClass="e-outline" Value="ALGER-2022-C000001"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["DeclarationType"]" CssClass="e-outline" Value="IMS - Admission Temporaire"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["DeclarationOffice"]" CssClass="e-outline" Value="ALGER"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["Importer"]" CssClass="e-outline" Value="Importateur"></SfTextBox>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfDatePicker Placeholder="@Localizer["DueDate"]" CssClass="e-outline" Value="@(new DateTime(2022, 4, 10))"></SfDatePicker>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["BasePrice"]" CssClass="e-outline" Value="3,000"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["GuaranteeNo"]" CssClass="e-outline" Value="2022-D000001"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["GuaranteeLifted"]" CssClass="e-outline" Value="NON"></SfTextBox>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfDatePicker Placeholder="@Localizer["DeclarationRegistrationDate"]" CssClass="e-outline" Value="@(new DateTime(2022, 2, 10))"></SfDatePicker>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["EPC"]" CssClass="e-outline" Value="5100"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["Exporter"]" CssClass="e-outline" Value="Exportateur"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["NumberOfArticles"]" CssClass="e-outline" Value="2"></SfTextBox>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfDatePicker Placeholder="@Localizer["ExecutionDate"]" CssClass="e-outline" Value="@(new DateTime(2022, 4, 10))"></SfDatePicker>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["GuaranteedAmount"]" CssClass="e-outline" Value="4,500"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["LiftedAmount"]" CssClass="e-outline" Value="0"></SfTextBox>
        </div>
    </div>

    <h4>@Localizer["ArticleDetails"]</h4>

    <SfGrid DataSource="@ArticleDetailsData" AllowPaging="true" PageSettings="new PageSettings { PageSize = 10 }" AllowSorting="true">
        <GridColumns>
            <GridColumn Field="ArticleNo" HeaderText="@Localizer["ArticleNo"]" Width="150"></GridColumn>
            <GridColumn Field="TariffSubPosition" HeaderText="@Localizer["TariffSubPosition"]" Width="150"></GridColumn>
            <GridColumn Field="TariffLabel" HeaderText="@Localizer["TariffLabel"]" Width="150"></GridColumn>
            <GridColumn Field="OriginCountry" HeaderText="@Localizer["OriginCountry"]" Width="150"></GridColumn>
            <GridColumn Field="APC" HeaderText="@Localizer["APC"]" Width="150"></GridColumn>
            <GridColumn Field="Quantity" HeaderText="@Localizer["Quantity"]" Width="150"></GridColumn>
            <GridColumn Field="ClearedQuantity" HeaderText="@Localizer["ClearedQuantity"]" Width="150"></GridColumn>
            <GridColumn Field="RemainingQuantity" HeaderText="@Localizer["RemainingQuantity"]" Width="150"></GridColumn>
        </GridColumns>
    </SfGrid>

    <h4>@Localizer["ExecutionDeclaration"]</h4>

    <SfGrid DataSource="@ExecutionDeclarationData" AllowPaging="true" PageSettings="new PageSettings { PageSize = 10 }" AllowSorting="true">
        <GridColumns>
            <GridColumn Field="DeclarationNo" HeaderText="@Localizer["DeclarationNo"]" Width="150"></GridColumn>
            <GridColumn Field="DeclarationRegistrationDate" HeaderText="@Localizer["DeclarationRegistrationDate"]" Width="150" Format="d"></GridColumn>
            <GridColumn Field="DeclarationType" HeaderText="@Localizer["DeclarationType"]" Width="150"></GridColumn>
            <GridColumn Field="EPC" HeaderText="@Localizer["EPC"]" Width="150"></GridColumn>
            <GridColumn Field="Importer" HeaderText="@Localizer["Importer"]" Width="150"></GridColumn>
            <GridColumn Field="Exporter" HeaderText="@Localizer["Exporter"]" Width="150"></GridColumn>
            <GridColumn Field="ArticleNo" HeaderText="@Localizer["ArticleNo"]" Width="150"></GridColumn>
            <GridColumn Field="TariffSubPosition" HeaderText="@Localizer["TariffSubPosition"]" Width="150"></GridColumn>
            <GridColumn Field="Quantity" HeaderText="@Localizer["Quantity"]" Width="150"></GridColumn>
            <GridColumn Field="BasePrice" HeaderText="@Localizer["BasePrice"]" Width="150"></GridColumn>
            <GridColumn Field="Status" HeaderText="@Localizer["Status"]" Width="150"></GridColumn>
        </GridColumns>
    </SfGrid>
</div>

