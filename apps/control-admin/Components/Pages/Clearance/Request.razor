@page "/clearance-request-details"
@using Syncfusion.Blazor.Grids
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Buttons
@inject IStringLocalizer<Pages.ClearanceRequestDetails> Localizer

<div class="container">
    <h3>@Localizer["ClearanceRequestDetailsTitle"]</h3>

    <h4>@Localizer["DeclarationDetails"]</h4>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["DeclarationNo"]" CssClass="e-outline" Value="ALGER-2022-C000001"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["Status"]" CssClass="e-outline" Value="Validation"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfButton CssClass="e-primary">@Localizer["Search"]</SfButton>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfDatePicker Placeholder="@Localizer["DeclarationRegistrationDate"]" CssClass="e-outline" Value="@(new DateTime(2022, 2, 10))"></SfDatePicker>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["DeclarantNo"]" CssClass="e-outline" Value="CUS12345"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["DeclarationType"]" CssClass="e-outline" Value="IMS - Admission Temporaire"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["NumberOfArticles"]" CssClass="e-outline" Value="2"></SfTextBox>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["Exporter"]" CssClass="e-outline" Value="Exportateur"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["Importer"]" CssClass="e-outline" Value="Importateur"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["BasePrice"]" CssClass="e-outline" Value="3,000"></SfTextBox>
        </div>
    </div>

    <h4>@Localizer["RequestDetails"]</h4>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["DDENo"]" CssClass="e-outline" Value="2022-F-000001"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfDatePicker Placeholder="@Localizer["DueDate"]" CssClass="e-outline" Value="@(new DateTime(2022, 4, 10))"></SfDatePicker>
        </div>
        <div class="col-md-3">
            <SfDatePicker Placeholder="@Localizer["RequestDate"]" CssClass="e-outline" Value="@(new DateTime(2022, 3, 10))"></SfDatePicker>
        </div>
        <div class="col-md-3">
            <SfDatePicker Placeholder="@Localizer["NewDueDate"]" CssClass="e-outline" Value="@(new DateTime(2022, 5, 10))"></SfDatePicker>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <SfTextArea Placeholder="@Localizer["RequestReason"]" CssClass="e-outline"></SfTextArea>
        </div>
        <div class="col-md-6">
            <SfTextBox Placeholder="@Localizer["AttachedDocument"]" CssClass="e-outline"></SfTextBox>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12 text-right">
            <SfButton CssClass="e-primary">@Localizer["Save"]</SfButton>
            <SfButton CssClass="e-primary">@Localizer["Edit"]</SfButton>
            <SfButton CssClass="e-primary">@Localizer["Delete"]</SfButton>
            <SfButton CssClass="e-primary">@Localizer["Send"]</SfButton>
        </div>
    </div>
</div>

