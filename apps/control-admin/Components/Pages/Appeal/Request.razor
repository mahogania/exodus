@page "/external-appeal-request"
@using Syncfusion.Blazor.Grids
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.DropDowns
@inject IStringLocalizer<Pages.ExternalAppealRequest> Localizer

<div class="container">
    <h3>@Localizer["ExternalAppealRequestTitle"]</h3>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["AppealNo"]" CssClass="e-outline"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfButton CssClass="e-primary">@Localizer["Reset"]</SfButton>
            <SfButton CssClass="e-primary">@Localizer["Search"]</SfButton>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["No"]" CssClass="e-outline" Value="1"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfDropDownList Placeholder="@Localizer["AppealType"]" CssClass="e-outline" DataSource="@AppealTypes" TItem="string" Value="CNR"></SfDropDownList>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["AppealNo"]" CssClass="e-outline" Value="ALGER-2022-C000001-1"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["RelatedWorkNo"]" CssClass="e-outline" Value="2022-RCO-0001"></SfTextBox>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["Declarant"]" CssClass="e-outline" Value="CUPIA"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["DeclarationOffice"]" CssClass="e-outline" Value="ALGER PORT"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["RequesterName"]" CssClass="e-outline" Value="RCO"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextArea Placeholder="@Localizer["Details"]" CssClass="e-outline" Value="RCO RECOURS"></SfTextArea>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfDropDownList Placeholder="@Localizer["Status"]" CssClass="e-outline" DataSource="@StatusOptions" TItem="string" Value="Réceptionner"></SfDropDownList>
        </div>
        <div class="col-md-3">
            <SfDatePicker Placeholder="@Localizer["RequestDate"]" CssClass="e-outline" Value="@(new DateTime(2022, 2, 10))"></SfDatePicker>
        </div>
        <div class="col-md-3">
            <SfTextBox Placeholder="@Localizer["ResponderName"]" CssClass="e-outline" Value="AMI"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextArea Placeholder="@Localizer["ResponseContent"]" CssClass="e-outline" Value="OK"></SfTextArea>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12 text-right">
            <SfButton CssClass="e-primary">@Localizer["Save"]</SfButton>
            <SfButton CssClass="e-primary">@Localizer["Edit"]</SfButton>
            <SfButton CssClass="e-primary">@Localizer["Delete"]</SfButton>
            <SfButton CssClass="e-primary">@Localizer["Send"]</SfButton>
        </div>
    </div>
</div>

@code {
    public List<string> AppealTypes = new List<string>
    {
        "CNR",
        "CRR",
        "Other"
        // Add more types as needed
    };

    public List<string> StatusOptions = new List<string>
    {
        "Réceptionner",
        "Autoriser",
        "Rejeter"
        // Add more statuses as needed
    };
}