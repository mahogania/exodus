                            <GridColumn Field="SealCharge" HeaderText="@Localizer["SealCharge"]" Width="150"></GridColumn>
                        </GridColumns>
                    </SfGrid>
                </ChildContent>
            </TabItem>
        </TabItems>
    </SfTab>

    <div class="row mt-3">
        <div class="col-md-12 text-right">
            <SfButton CssClass="e-primary">@Localizer["Submit"]</SfButton>
        </div>
    </div>
</div>

