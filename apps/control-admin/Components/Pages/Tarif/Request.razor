@page "/rtc-request-form"
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.DropDowns
@using Syncfusion.Blazor.Calendars
@using Syncfusion.Blazor.Buttons
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<RtcRequestForm> Localizer

<div class="container">
    <h2>@Localizer["Title"]</h2>
    <div class="form-group">
        <SfTextBox Placeholder="@Localizer["RTCNumber"]" CssClass="e-field" Value="RTC-2022-000001"></SfTextBox>
    </div>
    <div class="form-group">
        <label>@Localizer["Requester"]</label>
        <SfTextBox Placeholder="@Localizer["Requester"]" CssClass="e-field" Value="0000001"></SfTextBox>
        <SfButton CssClass="e-search">üîç</SfButton>
        <SfTextBox Placeholder="@Localizer["NRC"]" CssClass="e-field" Value="000000123456789"></SfTextBox>
        <SfTextBox Placeholder="@Localizer["NIF"]" CssClass="e-field" Value="000000123456789"></SfTextBox>
        <SfTextBox Placeholder="@Localizer["Address"]" CssClass="e-field"></SfTextBox>
        <SfTextBox Placeholder="@Localizer["Email"]" CssClass="e-field"></SfTextBox>
    </div>
    <div class="form-group">
        <label>@Localizer["HolderConfidential"]</label>
        <SfTextBox Placeholder="@Localizer["Holder"]" CssClass="e-field" Value="0000002"></SfTextBox>
        <SfButton CssClass="e-search">üîç</SfButton>
        <SfTextBox Placeholder="@Localizer["NRC"]" CssClass="e-field" Value="000000123456789"></SfTextBox>
        <SfTextBox Placeholder="@Localizer["NIF"]" CssClass="e-field" Value="000000123456789"></SfTextBox>
        <SfTextBox Placeholder="@Localizer["Address"]" CssClass="e-field"></SfTextBox>
        <SfTextBox Placeholder="@Localizer["Email"]" CssClass="e-field"></SfTextBox>
    </div>
    <div class="form-group">
        <SfTextBox Placeholder="@Localizer["OeaNumber"]" CssClass="e-field" Value="1020 du 20/11/2019"></SfTextBox>
    </div>
    <div class="form-group">
        <label>@Localizer["ReissueRTC"]</label>
        <SfTextBox Placeholder="@Localizer["ReferenceRTCNumber"]" CssClass="e-field"></SfTextBox>
        <SfDatePicker Placeholder="@Localizer["StartDateValidity"]" CssClass="e-field"></SfDatePicker>
        <SfTextBox Placeholder="@Localizer["GoodsDescription"]" CssClass="e-field"></SfTextBox>
        <SfTextBox Placeholder="@Localizer["TariffPosition"]" CssClass="e-field"></SfTextBox>
    </div>
    <div class="form-group">
        <label>@Localizer["OperationType"]</label>
        <SfRadioButton Label="@Localizer["Import"]" Name="operationType"></SfRadioButton>
        <SfRadioButton Label="@Localizer["Export"]" Name="operationType"></SfRadioButton>
    </div>
    <div class="form-group">
        <label>@Localizer["ImportantNote"]</label>
        <SfTextBox Placeholder="@Localizer["ImportantNote"]" CssClass="e-field" Multiline="true"></SfTextBox>
    </div>
    <div class="form-group">
        <label>@Localizer["CommercialDenomination"]</label>
        <SfTextBox Placeholder="@Localizer["CommercialDenomination"]" CssClass="e-field"></SfTextBox>
        <SfTextBox Placeholder="@Localizer["CountryOfOrigin"]" CssClass="e-field"></SfTextBox>
        <SfTextBox Placeholder="@Localizer["Value"]" CssClass="e-field"></SfTextBox>
        <SfTextBox Placeholder="@Localizer["Weight"]" CssClass="e-field"></SfTextBox>
    </div>
    <div class="form-group">
        <label>@Localizer["ClassificationEnvisaged"]</label>
        <SfTextBox Placeholder="@Localizer["TariffPosition"]" CssClass="e-field"></SfTextBox>
        <SfTextBox Placeholder="@Localizer["InterpretationRules"]" CssClass="e-field" Multiline="true"></SfTextBox>
        <SfTextBox Placeholder="@Localizer["GoodsDescription"]" CssClass="e-field" Multiline="true"></SfTextBox>
    </div>
    <div class="form-group">
        <label>@Localizer["ElementsAndProofs"]</label>
        <SfCheckBox Label="@Localizer["Samples"]"></SfCheckBox>
        <SfCheckBox Label="@Localizer["Brochures"]"></SfCheckBox>
        <SfCheckBox Label="@Localizer["Photographs"]"></SfCheckBox>
        <SfCheckBox Label="@Localizer["Reports"]"></SfCheckBox>
        <SfCheckBox Label="@Localizer["OthersSpecify"]"></SfCheckBox>
    </div>
    <div class="form-group">
        <label>@Localizer["SampleReturn"]</label>
        <SfRadioButton Label="@Localizer["Yes"]" Name="sampleReturn"></SfRadioButton>
        <SfRadioButton Label="@Localizer["No"]" Name="sampleReturn"></SfRadioButton>
    </div>
    <div class="form-group">
        <label>@Localizer["OtherRTCRequests"]</label>
        <SfRadioButton Label="@Localizer["Yes"]" Name="otherRequests"></SfRadioButton>
        <SfRadioButton Label="@Localizer["No"]" Name="otherRequests"></SfRadioButton>
        <SfTextBox Placeholder="@Localizer["RequestDate"]" CssClass="e-field"></SfTextBox>
        <SfTextBox Placeholder="@Localizer["RTCReference"]" CssClass="e-field"></SfTextBox>
        <SfDatePicker Placeholder="@Localizer["StartDateValidity"]" CssClass="e-field"></SfDatePicker>
        <SfTextBox Placeholder="@Localizer["TariffPosition"]" CssClass="e-field"></SfTextBox>
        <SfTextBox Placeholder="@Localizer["GoodsDescription"]" CssClass="e-field"></SfTextBox>
    </div>
    <div class="form-group">
        <label>@Localizer["KnowledgeOfExistingDecision"]</label>
        <SfTextBox Placeholder="@Localizer["Description"]" CssClass="e-field" Multiline="true"></SfTextBox>
    </div>
    <div class="form-group">
        <label>@Localizer["PhotoUpload"]</label>
        <SfUploader></SfUploader>
    </div>
    <div class="form-group">
        <label>@Localizer["SuspensionReason"]</label>
        <SfTextBox Placeholder="@Localizer["SuspensionReason"]" CssClass="e-field" Multiline="true"></SfTextBox>
    </div>
    <div class="form-group">
        <label>@Localizer["AdditionalInformation"]</label>
        <SfTextBox Placeholder="@Localizer["AdditionalInformation"]" CssClass="e-field" Multiline="true"></SfTextBox>
    </div>
    <div class="form-group">
        <SfButton CssClass="e-primary">@Localizer["Save"]</SfButton>
        <SfButton CssClass="e-secondary">@Localizer["Modify"]</SfButton>
        <SfButton CssClass="e-danger">@Localizer["Delete"]</SfButton>
        <SfButton CssClass="e-info">@Localizer["Send"]</SfButton>
        <SfButton CssClass="e-warning">@Localizer["Withdraw"]</SfButton>
        <SfButton CssClass="e-success">@Localizer["RequestSuspension"]</SfButton>
        <SfButton CssClass="e-dark">@Localizer["ControlResult"]</SfButton>
        <SfButton CssClass="e-light">@Localizer["Contest"]</SfButton>
    </div>
</div>

