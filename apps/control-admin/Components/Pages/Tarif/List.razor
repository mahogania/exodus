@page "/rtc-request"
@rendermode InteractiveServer
@using Syncfusion.Blazor.Grids
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.DropDowns
@using Syncfusion.Blazor.Calendars
@using Syncfusion.Blazor.Navigations

@* Add Syncfusion Blazor components *@
<SfDateRangePicker TValue="DateTime?" Placeholder="@("Request Date" | @syncfusion_localization)" CssClass="e-field"></SfDateRangePicker>
<SfDateRangePicker TValue="DateTime?" Placeholder="@("Validity Period" | @syncfusion_localization)" CssClass="e-field"></SfDateRangePicker>

<SfTextBox Placeholder="@("RTC No" | @syncfusion_localization)" CssClass="e-field"></SfTextBox>
<SfTextBox Placeholder="@("OEA No" | @syncfusion_localization)" CssClass="e-field"></SfTextBox>

<SfTextBox Placeholder="@("Tariff Subheading" | @syncfusion_localization)" CssClass="e-field">
    <ChildContent>
        <SfButton CssClass="e-search">üîç</SfButton>
    </ChildContent>
</SfTextBox>

<SfDropDownList TValue="string" Placeholder="@("Status" | @syncfusion_localization)" CssClass="e-field">
    <DropDownListItems>
        <DropDownListItem Text="@("Received" | @syncfusion_localization)" Value="Receptionne"></DropDownListItem>
        <DropDownListItem Text="@("In Progress" | @syncfusion_localization)" Value="EnCours"></DropDownListItem>
        <DropDownListItem Text="@("Completed" | @syncfusion_localization)" Value="Termine"></DropDownListItem>
    </DropDownListItems>
</SfDropDownList>

<SfButton CssClass="e-primary">@("Search" | @syncfusion_localization)</SfButton>
<SfButton CssClass="e-secondary">@("Reset" | @syncfusion_localization)</SfButton>

<SfGrid DataSource="@GridData" AllowPaging="true" PageSettings="new PageSettings { PageSize = 5 }">
    <GridColumns>
        <GridColumn Field="RtcNumber" HeaderText="@("RTC No" | @syncfusion_localization)" Width="150"></GridColumn>
        <GridColumn Field="Demandeur" HeaderText="@("Requester" | @syncfusion_localization)" Width="150"></GridColumn>
        <GridColumn Field="OeaNumber" HeaderText="@("OEA No" | @syncfusion_localization)" Width="150"></GridColumn>
        <GridColumn Field="SousPositionTarifaire" HeaderText="@("Tariff Subheading" | @syncfusion_localization)" Width="150"></GridColumn>
        <GridColumn Field="DateDebutValidite" HeaderText="@("Start Date of Validity" | @syncfusion_localization)" Width="150"></GridColumn>
        <GridColumn Field="DateFinValidite" HeaderText="@("End Date of Validity" | @syncfusion_localization)" Width="150"></GridColumn>
        <GridColumn Field="DateDemande" HeaderText="@("Request Date" | @syncfusion_localization)" Width="150"></GridColumn>
        <GridColumn Field="Statut" HeaderText="@("Status" | @syncfusion_localization)" Width="150"></GridColumn>
    </GridColumns>
</SfGrid>

<SfButton CssClass="e-success">@("Download as Excel" | @syncfusion_localization)</SfButton>

@code {
    public class RtcRequest
    {
        public string RtcNumber { get; set; }
        public string Requester { get; set; }
        public string OeaNumber { get; set; }
        public string TariffSubheading { get; set; }
        public DateTime StartDateOfValidity { get; set; }
        public DateTime EndDateOfValidity { get; set; }
        public DateTime RequestDate { get; set; }
        public string Status { get; set; }
    }

    private List<RtcRequest> GridData = new List<RtcRequest>
    {
        new RtcRequest
        {
            RtcNumber = "RTC-2022-000001",
