@page "/extension-requests"
@using Microsoft.Extensions.Localization
@inject IStringLocalizer Localizer

<div class="container">
    <h3>@Localizer["ExtensionRequestsTitle"]</h3>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfDateRangePicker TValue="DateTime[]" Placeholder="@Localizer["RegistrationDate"]" CssClass="e-outline"></SfDateRangePicker>
        </div>
        <div class="col-md-3">
            <SfTextBox TValue="string" Placeholder="@Localizer["DDENo"]" CssClass="e-outline"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfDropDownList TValue="string" Placeholder="@Localizer["Status"]" CssClass="e-outline" DataSource="@StatusOptions" TItem="string"></SfDropDownList>
        </div>
        <div class="col-md-3">
            <SfTextBox TValue="string" Placeholder="@Localizer["ReferenceNo"]" CssClass="e-outline"></SfTextBox>
        </div>
        <div class="col-md-3 mt-2">
            <SfButton TValue="string" CssClass="e-primary">@Localizer["Reset"]</SfButton>
            <SfButton TValue="string" CssClass="e-primary">@Localizer["Search"]</SfButton>
        </div>
    </div>

    <SfGrid DataSource="@ExtensionRequestData" AllowPaging="true" PageSettings="new GridPageSettings { PageSize = 10 }" AllowSorting="true">
        <GridColumns>
            <GridColumn Field="DDENo" HeaderText="@Localizer["DDENo"]" Width="150"></GridColumn>
            <GridColumn Field="ReferenceNo" HeaderText="@Localizer["ReferenceNo"]" Width="150"></GridColumn>
            <GridColumn Field="DeclarationRegistrationDate" HeaderText="@Localizer["DeclarationRegistrationDate"]" Width="150" Format="d"></GridColumn>
            <GridColumn Field="Exporter" HeaderText="@Localizer["Exporter"]" Width="150"></GridColumn>
            <GridColumn Field="ValidationDate" HeaderText="@Localizer["ValidationDate"]" Width="150" Format="d"></GridColumn>
            <GridColumn Field="LoadingDueDate" HeaderText="@Localizer["LoadingDueDate"]" Width="150" Format="d"></GridColumn>
            <GridColumn Field="NewDueDate" HeaderText="@Localizer["NewDueDate"]" Width="150" Format="d"></GridColumn>
            <GridColumn Field="Status" HeaderText="@Localizer["Status"]" Width="150"></GridColumn>
        </GridColumns>
    </SfGrid>

    <div class="row mt-3">
        <div class="col-md-12 text-right">
            <SfButton TValue="string" CssClass="e-primary">@Localizer["DownloadExcel"]</SfButton>
        </div>
    </div>
</div>

