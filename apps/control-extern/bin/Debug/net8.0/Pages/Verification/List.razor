@page "/verification-list"
@using Microsoft.Extensions.Localization
@inject IStringLocalizer Localizer

<div class="container">
    <h3>@Localizer["VerificationListTitle"]</h3>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfDateRangePicker TValue="DateTime[]" Placeholder="@Localizer["DDEDate"]" CssClass="e-outline"></SfDateRangePicker>
        </div>
        <div class="col-md-3">
            <SfTextBox TValue="string" Placeholder="@Localizer["ReferenceNo"]" CssClass="e-outline"></SfTextBox>
        </div>
        <div class="col-md-3 mt-2">
            <SfButton CssClass="e-primary">@Localizer["Reset"]</SfButton>
            <SfButton CssClass="e-primary">@Localizer["Search"]</SfButton>
        </div>
    </div>

    <SfGrid DataSource="@VerificationStatusData" AllowPaging="true" PageSettings="new GridPageSettings { PageSize = 10 }" AllowSorting="true">
        <GridColumns>
            <GridColumn Field="ReferenceNo" HeaderText="@Localizer["ReferenceNo"]" Width="150"></GridColumn>
            <GridColumn Field="DDEDate" HeaderText="@Localizer["DDEDate"]" Width="150" Format="d"></GridColumn>
            <GridColumn Field="DeclarationType" HeaderText="@Localizer["DeclarationType"]" Width="150"></GridColumn>
            <GridColumn Field="ClearanceTiming" HeaderText="@Localizer["ClearanceTiming"]" Width="150"></GridColumn>
            <GridColumn Field="DeclarantNo" HeaderText="@Localizer["DeclarantNo"]" Width="150"></GridColumn>
            <GridColumn Field="Responsible" HeaderText="@Localizer["Responsible"]" Width="150"></GridColumn>
            <GridColumn Field="NumberOfArticles" HeaderText="@Localizer["NumberOfArticles"]" Width="150"></GridColumn>
            <GridColumn Field="Detected" HeaderText="@Localizer["Detected"]" Width="150"></GridColumn>
            <GridColumn Field="Status" HeaderText="@Localizer["Status"]" Width="150"></GridColumn>
        </GridColumns>
    </SfGrid>

    <div class="row mt-3">
        <div class="col-md-12 text-right">
            <SfButton CssClass="e-primary">@Localizer["DownloadExcel"]</SfButton>
        </div>
    </div>
</div>

@code {

    public class VerificationStatus
    {
        public string ReferenceNo { get; set; }
        public DateTime DDEDate { get; set; }
        public string DeclarationType { get; set; }
        public string ClearanceTiming { get; set; }
        public string DeclarantNo { get; set; }
        public string Responsible { get; set; }
        public int NumberOfArticles { get; set; }
        public string Detected { get; set; }
        public string Status { get; set; }
    }

