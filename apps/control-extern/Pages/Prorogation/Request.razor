@page "/extension-request-details"
@using Microsoft.Extensions.Localization
@inject IStringLocalizer Localizer

<div class="container">
    <h3>@Localizer["ExtensionRequestDetailsTitle"]</h3>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfTextBox TValue="string" Placeholder="@Localizer["ReferenceNo"]" CssClass="e-outline" Value="H0001-2022-DAU-000001-E"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox TValue="string" Placeholder="@Localizer["Status"]" CssClass="e-outline" Value="Validation"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfButton TValue="string" CssClass="e-primary">@Localizer["Search"]</SfButton>
        </div>
    </div>

    <h4>@Localizer["DeclarationDetails"]</h4>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfTextBox TValue="string" Placeholder="@Localizer["ReferenceNo"]" CssClass="e-outline" Value="H0001-2022-DAU-000001-E"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox TValue="string" Placeholder="@Localizer["DeclarationType"]" CssClass="e-outline" Value="EX1 - Déclaration de l'exportation"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox TValue="int" Placeholder="@Localizer["NumberOfArticles"]" CssClass="e-outline" Value="2"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox TValue="int" Placeholder="@Localizer["NumberOfPackages"]" CssClass="e-outline" Value="1"></SfTextBox>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfTextBox TValue="string" Placeholder="@Localizer["DestinationCountry"]" CssClass="e-outline" Value="KOREA"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfDatePicker TValue="DateTime" Placeholder="@Localizer["LoadingDueDate"]" CssClass="e-outline" Value="@(new DateTime(2022, 4, 28))"></SfDatePicker>
        </div>
        <div class="col-md-3">
            <SfTextBox TValue="string" Placeholder="@Localizer["DeclarationOffice"]" CssClass="e-outline" Value="ALGER - Bureaux de Douane d'Alger"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox TValue="int" Placeholder="@Localizer["EPC"]" CssClass="e-outline" Value="1100"></SfTextBox>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfTextBox TValue="double" Placeholder="@Localizer["NetWeight"]" CssClass="e-outline" Value="2,640"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfTextBox TValue="string" Placeholder="@Localizer["TransportMode"]" CssClass="e-outline" Value="10 - Transport maritime"></SfTextBox>
        </div>
    </div>

    <h4>@Localizer["ExtensionRequest"]</h4>

    <div class="row mb-3">
        <div class="col-md-3">
            <SfTextBox TValue="string" Placeholder="@Localizer["DDENo"]" CssClass="e-outline" Value="2022-F-000001"></SfTextBox>
        </div>
        <div class="col-md-3">
            <SfDatePicker TValue="DateTime" Placeholder="@Localizer["RegistrationDate"]" CssClass="e-outline" Value="@(new DateTime(2022, 4, 10))"></SfDatePicker>
        </div>
        <div class="col-md-3">
            <SfDatePicker TValue="DateTime" Placeholder="@Localizer["NewDueDate"]" CssClass="e-outline" Value="@(new DateTime(2022, 5, 10))"></SfDatePicker>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <SfTextArea TValue="string" Placeholder="@Localizer["ExtensionReason"]" CssClass="e-outline"></SfTextArea>
        </div>
        <div class="col-md-6">
            <SfTextBox TValue="string" Placeholder="@Localizer["AttachedDocument"]" CssClass="e-outline"></SfTextBox>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12 text-right">
            <SfButton TValue="string" CssClass="e-primary">@Localizer["Save"]</SfButton>
            <SfButton TValue="string" CssClass="e-primary">@Localizer["Edit"]</SfButton>
            <SfButton TValue="string" CssClass="e-primary">@Localizer["Delete"]</SfButton>
            <SfButton TValue="string" CssClass="e-primary">@Localizer["Send"]</SfButton>
        </div>
    </div>
</div>

@code {

    public List<string> StatusOptions = new()
    {
        "Réceptionner",
        "Autoriser",
        "Rejeter"
        // Add more statuses as needed
    };

}
