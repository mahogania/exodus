@page "/to-do-list"
@using Microsoft.Extensions.Localization
@inject IStringLocalizer Localizer

<div class="container">
    <h3>@Localizer["ToDoListTitle"]</h3>

    <SfGrid DataSource="@ToDoData" AllowPaging="true" PageSettings="new GridPageSettings { PageSize = 10 }" AllowSorting="true">
        <GridColumns>
            <GridColumn Field="Number" HeaderText="@Localizer["Number"]" Width="50"></GridColumn>
            <GridColumn Field="ToDo" HeaderText="@Localizer["ToDo"]" Width="200"></GridColumn>
            <GridColumn Field="ProcessingDateTime" HeaderText="@Localizer["ProcessingDateTime"]" Width="200" Format="g"></GridColumn>
            <GridColumn Field="NotificationDetails" HeaderText="@Localizer["NotificationDetails"]" Width="200"></GridColumn>
        </GridColumns>
    </SfGrid>

    <h4>@Localizer["ToDoDetails"]</h4>
    <SfTextBox Placeholder="@Localizer["ToDoDetails"]" CssClass="e-outline" Multiline="true" Value="L'avis de paiement en instance de paiement existe pour cette déclaration. Veuillez le régler."></SfTextBox>

    <div class="row mt-3">
        <div class="col-md-12 text-right">
            <SfButton CssClass="e-primary">@Localizer["Close"]</SfButton>
        </div>
    </div>
</div>

@code {

    public class ToDo
    {
        public int Number { get; set; }
        public string Description { get; set; }
        public DateTime ProcessingDateTime { get; set; }
        public string NotificationDetails { get; set; }
    }

    public List<ToDo> ToDoData = new()
    {
        new ToDo { Number = 1, Description = "L'avis de paiement en instance de paiement existe pour cette déclaration. Veuillez le régler.", ProcessingDateTime = new DateTime(2022, 3, 30, 10, 28, 42), NotificationDetails = "" }
        // Add more data as needed
    };

}
